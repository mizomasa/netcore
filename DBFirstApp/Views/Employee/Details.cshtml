@model DBFirstApp.Controllers.Employee.ViewModel.EmployeeDetailAllViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TEmployee</h4>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">社員情報</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5 pr-1">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Self.Id" class="control-label"></label>
                                <input asp-for="Self.Id" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4 pl-1">
                            <div class="form-group">
                                <label asp-for="Self.Email" class="control-label"></label>
                                <input asp-for="Self.Email" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label asp-for="Self.FirstName" class="control-label"></label>
                                <input asp-for="Self.FirstName" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label asp-for="Self.LastName" class="control-label"></label>
                                <input asp-for="Self.LastName" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Self.Birthday" class="control-label"></label>
                                <input asp-for="Self.Birthday" class="form-control" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h5 class="title">家族情報</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Family.Families[0].FirstName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Family.Families[0].LastName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Family.Families[0].Birthday)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Family.Families[0].Sex)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Family.Families[0].RelationShip)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model == null)
                                    {
                                        <tr>
                                            <td>
                                                <Label>対象データがありません。</Label>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var item in Model.Family.Families)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FirstName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.LastName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Birthday)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Sex)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RelationShip)
                                                </td>
                                            </tr>
                                        }
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
